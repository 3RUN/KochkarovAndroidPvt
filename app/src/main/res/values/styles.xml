<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="DzMenuButton">
        <item name="android:layout_marginTop">@dimen/dzMenuButtonMarginTop</item>
        <item name="android:padding">@dimen/dzMenuButtonPadding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dzMenuButtonTextSize</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">@color/dz6EditTextBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/loginationEditTextSize</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingStart">@dimen/editTextPaddingStart</item>
        <item name="android:paddingTop">@dimen/editTextPaddingTop</item>
        <item name="android:paddingBottom">@dimen/editTextPaddingBottom</item>
        <item name="android:layout_marginStart">@dimen/editTextMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
        <item name="android:drawablePadding">@dimen/editTextDrawablePadding</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_marginStart">@dimen/buttonMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/buttonMarginEnd</item>
        <item name="android:paddingTop">@dimen/buttonPaddingTop</item>
        <item name="android:paddingBottom">@dimen/buttonPaddingBottom</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/loginTextSize</item>
        <item name="android:layout_marginTop">@dimen/loginButtonMarginTop</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:text">@string/dz2LoginLogin</item>
    </style>

    <style name="ForgotAccountButton">
        <item name="android:layout_marginTop">@dimen/forgotMarginTop</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/forgotTextSize</item>
        <item name="android:text">@string/dz2LoginForgot</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CreateAccountButton">
        <item name="android:layout_marginStart">@dimen/buttonMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/buttonMarginEnd</item>
        <item name="android:paddingTop">@dimen/buttonPaddingTop</item>
        <item name="android:paddingBottom">@dimen/buttonPaddingBottom</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/loginTextSize</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:text">@string/dz2LoginCreate</item>
    </style>

    <style name="UrlEditText">
        <item name="android:background">@color/urlEditTextBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/dz2UrlScale</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingStart">@dimen/editTextPaddingStart</item>
        <item name="android:paddingEnd">@dimen/editTextPaddingStart</item>
        <item name="android:paddingTop">@dimen/editTextPaddingTop</item>
        <item name="android:paddingBottom">@dimen/editTextPaddingBottom</item>
        <item name="android:layout_marginStart">@dimen/editTextMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
        <item name="android:layout_marginTop">@dimen/editTextMarginEnd</item>
    </style>

    <style name="UrlLoadButton">
        <item name="android:layout_marginStart">@dimen/buttonMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/buttonMarginEnd</item>
        <item name="android:paddingTop">@dimen/buttonPaddingTop</item>
        <item name="android:paddingBottom">@dimen/buttonPaddingBottom</item>
        <item name="android:paddingStart">@dimen/buttonPaddingStart</item>
        <item name="android:paddingEnd">@dimen/buttonPaddingEnd</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/loginTextSize</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:text">@string/dz2LoginCreate</item>
    </style>

    <style name="Dz3Notification">
        <item name="android:layout_width">@dimen/dz3NotificationWidth</item>
        <item name="android:layout_height">@dimen/dz3NotificationHeight</item>
        <item name="android:layout_marginLeft">@dimen/dz3NotificationMarginLeft</item>
        <item name="android:layout_marginTop">@dimen/dz3NotificationMarginTop</item>
        <item name="android:src">@drawable/ic_notifications_black_24dp</item>
        <item name="android:tint">@color/dz3White</item>
    </style>

    <style name="Dz3FullNameText">
        <item name="android:layout_marginLeft">@dimen/dz3TextNameMarginLeft</item>
        <item name="android:layout_marginTop">@dimen/dz3TextNameMarginTop</item>
        <item name="android:text">Dylan Conner</item>
        <item name="android:textColor">@color/dz3White</item>
        <item name="android:textSize">@dimen/dz3TextNameScale</item>
    </style>

    <style name="Dz3TextField">
        <item name="android:layout_marginStart">@dimen/dz3TextMarginStart</item>
        <item name="android:layout_marginTop">@dimen/dz3TextMarginTop</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dz3Gray</item>
        <item name="android:textSize">@dimen/dz3TextTextSize</item>
    </style>

    <style name="Dz3TextFieldUser">
        <item name="android:layout_marginStart">@dimen/dz3TextUseInfoMarginStart</item>
        <item name="android:layout_marginTop">@dimen/dz3TextUseInfoMarginTop</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dz3White</item>
        <item name="android:textSize">@dimen/dz3TextUseInfoTextSize</item>
    </style>

    <style name="Dz3Tabs">
        <item name="android:layout_marginTop">@dimen/dz3TabMarginTop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dz3Gray</item>
        <item name="android:textSize">@dimen/dz3TabTextScale</item>
    </style>

    <style name="Dz3ButtonDigit">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/dz3Yellow</item>
        <item name="android:textSize">@dimen/dz3ButtonDigitTextScale</item>
    </style>

    <style name="Dz3ImageView">
        <item name="android:layout_width">@dimen/dz3ImageHeightWeight</item>
        <item name="android:layout_height">@dimen/dz3ImageHeightWeight</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Dz6ListAddButton">
        <item name="android:layout_width">@dimen/dz6ListAddButtonWidth</item>
        <item name="android:layout_height">@dimen/dz6ListAddButtonHeight</item>
        <item name="android:layout_marginRight">@dimen/dz6ListAddButtonMarginRight</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_add_circle_black_24dp</item>
        <item name="android:tint">@android:color/holo_green_light</item>
    </style>

    <style name="Dz6Buttons">
        <item name="android:layout_margin">@dimen/dz6ButtonsMargin</item>
    </style>

    <style name="Dz6FilterEditText">
        <item name="android:paddingStart">@dimen/editTextPaddingStart</item>
        <item name="android:background">@color/dz6EditTextBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/dz6EditTextScale</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:layout_margin">@dimen/dz6FilterEditTextMargin</item>
    </style>

    <style name="Dz6EditText">
        <item name="android:background">@color/dz6EditTextBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/dz6EditTextScale</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingStart">@dimen/editTextPaddingStart</item>
        <item name="android:paddingTop">@dimen/editTextPaddingTop</item>
        <item name="android:paddingBottom">@dimen/editTextPaddingBottom</item>
        <item name="android:layout_marginStart">@dimen/editTextMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
        <item name="android:drawablePadding">@dimen/editTextDrawablePadding</item>
    </style>

    <style name="Dz6DetailText">
        <item name="android:textSize">@dimen/dz6InfoTextScale</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Dz6StudentDetailText">
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dz6InfoTextScale</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Dz6StudentItemText">
        <item name="android:layout_marginLeft">@dimen/dz6StudentItemTextMarginLeft</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dz6StudentItemTextScale</item>
    </style>

</resources>
