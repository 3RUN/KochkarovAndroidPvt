<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">#40808080</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingStart">64sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LoginIcon">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
